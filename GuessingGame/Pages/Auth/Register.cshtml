@page
@model RegisterModel


<div class="container container-register">
    <div class="row">
        <div class="col pt-5 register-container mt-5 pt-5">
            <h2 class="text-center">REGISTER</h2>

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" placeholder="Choose a cool username"
                        required />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Pick a hard-to-guess password"
                        required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group pt-2 d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-success mt-2 mb-2">Register User</button>
                </div>
            </form>
            <h6 class="pt-2 d-flex justify-content-center"> Take me back to &nbsp; <a asp-page="/Index"> login </a>
            </h6>
        </div>
    </div>
</div>

<style>
    .container-register {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .register-container {
        background-color: rgba(255, 255, 255, 0.721);
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        width: 30rem;
    }
</style>